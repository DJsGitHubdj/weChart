.y-color{
  color: #ffb400;
  width: 100rpx;
  margin: 40rpx 20rpx;  
}
.y-color-com{
  display: block;
  color: #ffb400;
  width: 100rpx;
  margin: 40rpx 0;  
}
.btn{
  height: 56rpx;
  color:aliceblue;
  background-color:#ef4238;
}
.search-list{
  padding: 30rpx 0;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}
.movie-name{
  display: block;
  margin-right:20rpx;
  margin-bottom: 20rpx;
  padding: 6rpx 10rpx; 
  border-radius: 8rpx;
  background-color: #ccc;
}