} */
.y-color{
  color: #ffb400;
  width: 100rpx;
  margin: 40rpx 20rpx;  
}
.y-color-com{
  display: block;
  color: #ffb400;
  width: 100rpx;
  margin: 40rpx 0;  
}
.btn{
  height: 56rpx;
  color:aliceblue;
  background-color:#ef4238;
}
.coming-movies{
  padding: 0 24rpx;
}
.coming-movie{
  width: 170rpx;
  height: 230rpx;
}
.list-one{
  width: 170rpx;
  margin-right: 20rpx;
  display: inline-block;
}
.movie-list{
  width: 100%;
  display: flex;
  height: 380rpx;
  padding: 10rpx 0;
  white-space:nowrap;
}
.coming-text{
  padding: 20rpx 0;
}
.list{
  flex:auto;
}
.btn-com{
  height: 56rpx;
  color:aliceblue;
  background-color:#52b0eb;
}
.mid{
  width: 420rpx;
  height: 176rpx;
  overflow: hidden;
}
.text-coming-wid{
  width: 168rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.text-h5{
  display: block;
  text-align: center;
  font-size: 26rpx;
  color: #766163;
}