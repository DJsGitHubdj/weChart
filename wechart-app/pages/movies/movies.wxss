/* pages/weChart/wechart.wxss */

.navbar{
 width: 500rpx;
 height: 90rpx;
 display: flex;
 justify-content: space-between;
 align-items: center;
 font-size: 30rpx;
 font-weight: bold;
}
.item{
   padding: 20rpx 0; 
}
.item:hover{
  color:#ef4238;
  border-bottom: 5rpx solid #ef4238;
}
.nav-img{
  width: 46rpx;
  height: 40rpx;
  padding: 22rpx;
  padding-right: 0;
  border-left: 1rpx solid #ccc;
}
.hot-movies{
  padding: 0 24rpx;
}
.hot-movie{
  width: 130rpx;
  height: 180rpx;
}
.movie-one{
  display: flex;
  height: 228rpx;
  border-bottom: 1rpx solid #ccc;
  justify-content: space-between;
  align-items:center;
}
.h3{
  font-size: 36rpx;
  font-weight: bold;
  display: block;
}
text{
  display: block;
}
.text-nomal{
  display: block;
  padding: 5rpx 0;
  color: #999;
  /* 设置文本超出部分为省略号 */
  width: 420rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
/* .small-text{
  display: block; 
  font-size: 18rpx;
